{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": false,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "ES6",
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./types"],
  "exclude": ["./src/utils/**/*"]
}

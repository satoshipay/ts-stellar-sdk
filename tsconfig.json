{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": false,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "ES5",
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "files": [
    "./src/utils/base64.browser.ts",
    "./src/utils/ed25519.browser.ts",
    "./src/utils/fetch.browser.ts",
    "./src/utils/sha.browser.ts",
    "./src/utils/sse.browser.ts",
    "./src/utils/url.browser.ts"
  ],
  "include": ["./src/**/*", "./types"],
  "exclude": ["./src/utils/**/*"]
}
